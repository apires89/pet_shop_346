<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @order.pet.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>pet</strong> <%= @order.pet.name %> [<%= @order.pet_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.total_price %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
